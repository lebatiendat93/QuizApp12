<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cad_view"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_faculty"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_faculty_of_science" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_faculty_name"
                style="@style/style_text_medium_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_faculty"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="Khoa tự nhiên" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_subject_name"
                style="@style/style_text_regular_size_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_faculty_name"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white_80"
                tools:text="21 câu đố" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
